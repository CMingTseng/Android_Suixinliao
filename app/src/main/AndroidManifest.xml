<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tencent.qcloud.timchat" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HomeActivity" />
        <activity
            android:name=".ui.ChatActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.AddNewFriendActivity" />
        <activity android:name=".ui.AddNewFriendDetailActivity" />
        <activity android:name=".ui.NewFriendActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.ManagerFriendGroupActivity" />
        <activity android:name=".ui.NewFriendDetailActivity" />
        <activity android:name=".ui.VideoActivity" />
        <activity android:name=".ui.GroupManagerActivity" />
        <activity android:name=".ui.CreateGroupActivity" />
        <activity android:name=".ui.ChooseMembersActivity" />
        <activity android:name=".ui.ChatSettingActivity" />
        <activity android:name=".ui.GroupChatSettingActivity" />

        <service
            android:name="com.tencent.qalsdk.service.QalService"
            android:exported="true"
            android:permission="com.tencent.msf.service.permission"
            android:process=":QALSERVICE" >
        </service>

        <receiver android:name="com.tencent.qalsdk.QALBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.tencent.qalsdk.broadcast.qal" />
            </intent-filter>
        </receiver>
        <!-- 【必须】 qal service广播接收,开机启动 -->
        <receiver
            android:name="com.tencent.qalsdk.service.QALServiceReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":QALSERVICE" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.ChangeCategoryActivity" >
        </activity>
        <activity android:name=".ui.ImageViewActivity" >
        </activity>
        <activity android:name=".ui.EditActivity" >
        </activity>
    </application>

</manifest>
